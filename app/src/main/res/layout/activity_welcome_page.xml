<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/r_bgimage"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="64dp"
        android:text="Hello !"
        android:textColor="#fff"
        android:textSize="48dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="Enter your name and upload your picture to start using your            Media Player"
        android:textColor="#fff"
        android:textSize="24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/button"
            android:layout_width="108dp"
            android:layout_height="99dp"
            android:layout_gravity="center"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/lay3"
            app:backgroundTint="#B19ED3"
            app:icon="@drawable/user"
            app:iconPadding="8dp"
            app:iconSize="74dp"
            app:iconTint="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/lay"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="#fff"
                android:hint="Enter your name"
                android:textColorHint="#fff">


            </EditText>


        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/homepage"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/lay3"
        app:backgroundTint="#B19ED3"
        app:icon="@drawable/ic_baseline_music_note_24"
        app:iconGravity="top"
        app:iconTint="#fff" />

</LinearLayout>


