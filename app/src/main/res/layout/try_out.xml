<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B19ED3"
    android:backgroundTint="#B19ED3"
    android:gravity="center"

    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/cam"
        android:layout_width="106dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="@dimen/activity_padding"

        android:layout_marginBottom="@dimen/activity_padding"
        android:contentDescription="@string/user_photo"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:layout_width="@dimen/ic_plus_width"
        android:layout_height="@dimen/ic_plus_width"
        android:layout_alignRight="@id/cam"
        android:layout_alignBottom="@+id/cam"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_new"
        android:backgroundTint="#B19ED3"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_cam"
        android:layout_alignEnd="@id/cam" />

</RelativeLayout>