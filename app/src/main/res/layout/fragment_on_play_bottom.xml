<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OnPlayBottomFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_bottom"
        android:background="@drawable/background"
        android:padding="5dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/r_logo"
            android:scaleType="centerCrop"
            android:id="@+id/card_image"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/card_next"
            android:src="@drawable/ic_card_next"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_play"
            android:src="@drawable/ic_cardpause"
            android:clickable="true"
            android:focusable="true"
            android:layout_toStartOf="@+id/card_next"
            android:layout_marginEnd="10dp"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_songname"
            android:text="Song Name"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/card_image"
            android:textSize="18sp"
            android:maxLines="1"
            android:layout_toStartOf="@+id/card_play"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_artistname"
            android:text="Artist"
            android:layout_below="@+id/card_songname"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/card_image"
            android:textSize="15sp"
            android:maxLines="1"
            android:layout_toStartOf="@+id/card_play"/>




    </RelativeLayout>



</FrameLayout>