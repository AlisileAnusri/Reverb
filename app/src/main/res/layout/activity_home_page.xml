<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/black">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"


        android:src="@drawable/puser"/>


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/circle_profile"
        android:backgroundTint="#9D7AA6"

        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/lay"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Audio"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Audio"
            android:textColor="#fff"
            android:textSize="28dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/all_son"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:src="@drawable/mn"

                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/Playlists"
                android:layout_width="100dp"

                android:layout_height="100dp"

                android:src="@drawable/playlist6"
                android:layout_marginStart="66dp"

                android:layout_gravity="center_vertical"
                />





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Songs"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:id="@+id/alls"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlists"
                android:layout_marginStart="100dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:id="@+id/playl"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/l2"
        android:layout_height="254dp"
        android:layout_below="@+id/l1"
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/lay"
        android:backgroundTint="#7E839C"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/Video"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Video"
            android:textColor="#fff"
            android:textSize="28dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/all_videos"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:src="@drawable/allvideoss"

                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/v_folders"
                android:layout_width="100dp"

                android:layout_height="100dp"

                android:src="@drawable/vfolder"
                android:layout_marginStart="66dp"

                android:layout_gravity="center_vertical"
                />





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Videos"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:id="@+id/allv"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folders"
                android:layout_marginStart="96dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:id="@+id/vfold"
                android:textStyle="bold"/>

        </LinearLayout>




    </LinearLayout>


</RelativeLayout>



