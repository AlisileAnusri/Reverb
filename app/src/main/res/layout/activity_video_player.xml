<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".VideoPlayer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bot_navigation"

        android:orientation="vertical">
        <com.google.android.exoplayer2.ui.PlayerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/exoplayer_movie"
            android:background="@drawable/background"
            app:hide_on_touch="true"
            app:resize_mode="fit"
            app:rewind_increment="10000"
            app:fastforward_increment="10000"
            app:use_controller="true"
            app:show_buffering="when_playing"
            app:show_timeout="5000"
            app:shutter_background_color="@color/white"
            app:controller_layout_id="@layout/custom_controller_view"
            app:player_layout_id="simple_player_view"/>




    </LinearLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bot_navigation"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        app:itemBackground="@android:color/transparent"
        app:itemIconTint="@drawable/nav_item_color"
        app:menu="@menu/bottom_navigation"
        app:itemTextColor="@color/white"



        />

    </RelativeLayout>